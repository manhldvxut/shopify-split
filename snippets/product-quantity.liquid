<product-quantity  class="quantity-selector-holder" {% unless variant.available %} style="display:none" {% endunless %}>

  <button class="qty-button qty-minus" aria-label="{{ 'general.accessibility_labels.increase_quantity' | t }}" role="button" controls="qty-{{ id }}">
    {%- render 'theme-symbols', icon: 'minus_icon' -%}
  </button>

  <label for="qty-{{ id }}" class="visually-hidden">{{ 'product.quantity' | t }}</label>
  <input type="number" name="quantity" value="1" min="1" class="qty-selector product__quantity" id="qty-{{ id }}">

  <button class="qty-button qty-plus" aria-label="{{ 'general.accessibility_labels.decrease_quantity' | t }}" role="button" controls="qty-{{ id }}">
    {%- render 'theme-symbols', icon: 'plus_icon' -%}
  </button>

</product-quantity>
